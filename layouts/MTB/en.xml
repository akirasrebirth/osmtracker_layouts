			<button type="voicerec" icon="voice_32x32" />
			<button type="picture" icon="camera_32x32" />
			<button type="textnote" icon="text_32x32" />
			<button type="page" label="other" targetlayout="uphill" />
		</row>
		<row>
			<button type="tag" label="mtb:scale=0" />
			<button type="tag" label="mtb:scale=1" />
			<button type="tag" label="mtb:scale=2" />
			<button type="tag" label="mtb:scale=3" />
		</row>
		<row>
			<button type="tag" label="mtb:scale=4" />
			<button type="tag" label="mtb:scale=5" />
			<button type="tag" label="mtb:scale=6" />
			<button type="tag" label="mtb:scale:imba=0" />
		</row>
		<row>
			<button type="tag" label="mtb:scale:imba=1" />
