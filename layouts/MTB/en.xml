<?xml version="1.0" encoding="utf-8"?>
<layouts>
	<layout name="root">
		<row>
			<button type="voicerec" icon="MTB_icons/voice_32x32.png" />
			<button type="picture" icon="MTB_icons/camera_32x32.png" />
			<button type="textnote" icon="MTB_icons/text_32x32.png" />
			<!-- <button type="voicerec" icon="voice_32x32" />
			<button type="picture" icon="camera_32x32" />
			<button type="textnote" icon="text_32x32" /> -->
			<button type="page" label="uphill" icon="MTB_icons/uphill.png" targetlayout="uphill" />
		</row>
		<row>
			<button type="tag" label="mtb:scale=0" icon="MTB_icons/mtb_scale_0.png" />
			<button type="tag" label="mtb:scale=1" icon="MTB_icons/mtb_scale_1.png"/>
			<button type="tag" label="mtb:scale=2" icon="MTB_icons/mtb_scale_2.png"/>
			<button type="tag" label="mtb:scale=3" icon="MTB_icons/mtb_scale_3.png"/>
		</row>
		<row>
			<button type="tag" label="mtb:scale=4" icon="MTB_icons/mtb_scale_4.png"/>
			<button type="tag" label="mtb:scale=5" icon="MTB_icons/mtb_scale_5.png"/>
			<button type="tag" label="mtb:scale=6" icon="MTB_icons/mtb_scale_6.png"/>
			<button type="tag" label="mtb:scale:imba=0" />
		</row>
		<row>
			<button type="tag" label="mtb:scale:imba=1" />
			<button type="tag" label="mtb:scale:imba=2" />
			<button type="tag" label="mtb:scale:imba=3" />
			<button type="tag" label="mtb:scale:imba=4" />
		</row>
		<row>
			<button type="tag" label="highway=track" icon="MTB_icons/button_track_track.png"/>
			<button type="tag" label="highway=path" icon="MTB_icons/button_track_grade1.png"/>
			<button type="tag" label="bicycle=no" />
			<button type="tag" label="charging_station bicycle=yes" />
		</row>
	</layout>

	<layout name="uphill">
		<row>
			<button type="voicerec" icon="voice_32x32" />
			<button type="picture" icon="camera_32x32" />
			<button type="textnote" icon="text_32x32" />
			<button type="tag" label="mtb:scale:uphill=0" />
		</row>
		<row>
			<button type="tag" label="mtb:scale:uphill=1" />
			<button type="tag" label="mtb:scale:uphill=2" />
			<button type="tag" label="mtb:scale:uphill=3" />
			<button type="tag" label="mtb:scale:uphill=4" />
		</row>
		<row>
			<button type="tag" label="mtb:scale:uphill=5" />
			<button type="tag" label="incline= 10%" />
			<button type="tag" label="incline= 15%" />
			<button type="tag" label="incline= 20%" />
		</row>
		<row>
			<button type="tag" label="incline= 25%" />
			<button type="tag" label="incline= 30%" />
			<button type="tag" label="incline= 35%" />
			<button type="tag" label="incline= 40%" />
		</row>
	</layout>
</layouts>
